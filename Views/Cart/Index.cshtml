@model IEnumerable<WebNhaHang.Models.CartItem>

@{
    ViewData["Title"] = "Giỏ Hàng - Cart";
}

<div class="container mx-auto px-4 py-16">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">Giỏ Hàng Của Bạn</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Cart Items -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                    @foreach (var item in Model)
                    {
                        <div class="flex items-center gap-4 p-6 border-b last:border-b-0 hover:bg-gray-50 transition">
                            <!-- Image -->
                            <div class="w-24 h-24 flex-shrink-0 bg-gray-200 rounded overflow-hidden">
                                @if (!string.IsNullOrEmpty(item.Dish?.ImageUrl))
                                {
                                    <img src="@item.Dish.ImageUrl" alt="@item.Dish.Name" class="w-full h-full object-cover" onerror="this.src='/images/placeholder.jpg'">
                                }
                                else
                                {
                                    <div class="w-full h-full flex items-center justify-center text-gray-400 text-xs">
                                        No Image
                                    </div>
                                }
                            </div>

                            <!-- Details -->
                            <div class="flex-1">
                                <h3 class="text-xl font-bold text-gray-800">@item.Dish?.Name</h3>
                                <p class="text-gray-600 mb-2">@item.Price.ToString("#,##0") VNĐ</p>

                                @if (!string.IsNullOrEmpty(item.SpecialInstructions))
                                {
                                    <p class="text-sm text-gray-500 italic">Ghi chú: @item.SpecialInstructions</p>
                                }

                                <!-- Quantity Controls -->
                                <div class="flex items-center gap-2 mt-2">
                                    <form asp-action="Update" method="post" class="flex items-center gap-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="itemId" value="@item.Id" />
                                        <button type="submit" name="quantity" value="@(item.Quantity - 1)" class="w-8 h-8 bg-gray-200 hover:bg-gray-300 rounded">-</button>
                                        <span class="w-12 text-center font-semibold">@item.Quantity</span>
                                        <button type="submit" name="quantity" value="@(item.Quantity + 1)" class="w-8 h-8 bg-gray-200 hover:bg-gray-300 rounded">+</button>
                                    </form>
                                </div>
                            </div>

                            <!-- Price and Remove -->
                            <div class="text-right">
                                <p class="text-xl font-bold text-orange-500 mb-4">
                                    @((item.Price * item.Quantity).ToString("#,##0")) VNĐ
                                </p>
                                <form asp-action="Remove" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@item.Id" />
                                    <button type="submit" class="text-red-500 hover:text-red-700 text-sm">
                                        Xóa
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-lg p-6 sticky top-4">
                    <h2 class="text-2xl font-bold text-gray-800 mb-6">Tổng Đơn Hàng</h2>

                    <div class="space-y-3 mb-6">
                        <div class="flex justify-between text-gray-600">
                            <span>Tạm tính:</span>
                            <span>@ViewBag.SubTotal.ToString("#,##0") VNĐ</span>
                        </div>
                        <div class="flex justify-between text-gray-600">
                            <span>Phí giao hàng:</span>
                            <span>@ViewBag.DeliveryFee.ToString("#,##0") VNĐ</span>
                        </div>
                        <div class="border-t pt-3">
                            <div class="flex justify-between text-xl font-bold text-gray-800">
                                <span>Tổng cộng:</span>
                                <span class="text-orange-500">@ViewBag.Total.ToString("#,##0") VNĐ</span>
                            </div>
                        </div>
                    </div>

                    <a asp-action="Checkout" class="block w-full bg-orange-500 text-white text-center px-6 py-3 rounded-lg hover:bg-orange-600 transition font-semibold mb-3">
                        Thanh Toán
                    </a>

                    <a asp-controller="Menu" asp-action="Index" class="block w-full bg-gray-200 text-gray-800 text-center px-6 py-3 rounded-lg hover:bg-gray-300 transition">
                        Tiếp Tục Mua Hàng
                    </a>

                    <!-- Promo Code -->
                    <div class="mt-6 pt-6 border-t">
                        <label class="block text-gray-700 font-semibold mb-2">Mã Giảm Giá</label>
                        <div class="flex gap-2">
                            <input type="text" placeholder="Nhập mã..." class="flex-1 px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-orange-500">
                            <button class="bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition">
                                Áp Dụng
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty Cart -->
        <div class="text-center py-16">
            <div class="inline-flex items-center justify-center w-24 h-24 bg-gray-100 rounded-full mb-6">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                </svg>
            </div>
            <h2 class="text-3xl font-bold text-gray-800 mb-4">Giỏ Hàng Trống</h2>
            <p class="text-gray-600 mb-8">Bạn chưa có món ăn nào trong giỏ hàng</p>
            <a asp-controller="Menu" asp-action="Index" class="inline-block bg-orange-500 text-white px-8 py-3 rounded-lg hover:bg-orange-600 transition font-semibold">
                Khám Phá Thực Đơn
            </a>
        </div>
    }
</div>
