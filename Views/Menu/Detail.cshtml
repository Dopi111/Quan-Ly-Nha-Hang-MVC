@{
    ViewData["Title"] = "Menu Detail";
}
<div class="container my-4">
    <a asp-action="Index" class="text-danger text-decoration-none">&larr; Back to Menu</a>
    <div class="row g-4 mt-1 align-items-start">
        <div class="col-md-6">
            <div class="bg-secondary-subtle d-flex align-items-center justify-content-center" style="height:400px;">Dish Image</div>
        </div>
        <div class="col-md-6">
            <h1 class="h2">Dish Name</h1>
            <div class="text-secondary mb-2">Category: Starter</div>
            <div class="text-danger fw-bold fs-4 mb-3">88,000đ</div>
            <div class="p-3 rounded mb-3" style="background:#f9f9f9;">
                <h5 class="mb-2">Description</h5>
                <div class="small">Chi tiết mô tả về món ăn, nguyên liệu, cách chế biến và những đặc điểm nổi bật của món ăn này.</div>
            </div>
            <div class="p-3 rounded mb-3" style="background:#f9f9f9;">
                <h5 class="mb-2">Ingredients</h5>
                <ul class="small mb-0">
                    <li>Ingredient 1</li>
                    <li>Ingredient 2</li>
                    <li>Ingredient 3</li>
                </ul>
            </div>
            <button class="btn btn-danger">Add to Cart</button>
        </div>
    </div>

    <h2 class="mt-5 border-bottom pb-2" style="color:#1a3a52;">RELATED DISHES</h2>
    <div class="row row-cols-1 row-cols-md-3 g-3 mt-1">
        <div class="col">@await Html.PartialAsync("_Card", new ViewDataDictionary(ViewData){ {"ImageText","Image"},{"CardTitle","Related Dish 1"},{"Price","88,000đ"} })</div>
        <div class="col">@await Html.PartialAsync("_Card", new ViewDataDictionary(ViewData){ {"ImageText","Image"},{"CardTitle","Related Dish 2"},{"Price","136,000đ"} })</div>
        <div class="col">@await Html.PartialAsync("_Card", new ViewDataDictionary(ViewData){ {"ImageText","Image"},{"CardTitle","Related Dish 3"},{"Price","88,000đ"} })</div>
    </div>
</div>


