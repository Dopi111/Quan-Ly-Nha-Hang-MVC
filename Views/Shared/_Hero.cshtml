@model WebNhaHang.Models.HeroViewModel
<div class="hero d-flex align-items-center justify-content-center text-white text-center overflow-hidden" style="height:300px; background: linear-gradient(rgba(0,0,0,.3), rgba(0,0,0,.3)), url('@(Model.BackgroundImageUrl ?? "")'); background-size: cover; background-position: center;">
    <div class="animate-fade-in">
        <h1 class="display-5 fw-bold">@Model.Title</h1>
        @if (!string.IsNullOrWhiteSpace(Model.Subtitle))
        {
            <p class="lead">@Model.Subtitle</p>
        }
    </div>
</div>


